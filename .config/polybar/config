[module/battery/base]
poll-interval = 5
type = internal/battery

format-charging = î†£ <label-charging>
format-charging-underline = ${colors.default-underline}

format-discharging = î†¤ <label-discharging>
format-discharging-underline = ${colors.default-underline}

format-full-prefix = "î†¤ "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.default-underline}

[module/battery/ac]
type = custom/script
exec = cat /sys/class/power_supply/AC/online | sed -e 's/1/î˜¼/' -e 's/0//'
tail = false
interval = 3
format-offset = 5

[module/battery/internal]
inherit = module/battery/base
battery = BAT0
adapter = ADP1
full-at = 87

[module/battery/swap]
inherit = module/battery/base
battery = BAT1
adapter = ADP1
full-at = 104

[module/battery/combined]
type = custom/text
battery = BAT1
adapter = ADP1
full-at = 104

