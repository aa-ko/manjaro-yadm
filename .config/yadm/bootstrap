#!/bin/bash

# TODO:
# - Move to /usr/bin/zsh ?

# yadm setup
cd "$HOME"
echo "Initializing yadm submodules.."
yadm submodule update --recursive --init

# zsh setup
echo "Installing zsh and oh-my-zsh.."
pamac install zsh
bash -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)" "" --unattended
chsh -s /usr/bin/zsh aako

# install / update essentials
pamac install telegram-desktop firefox

# keepass with optional dependencies
pamac install keepass xdotool xsel

# albert setup
pamac install albert muparser

# flameshot
pamac install flameshot
